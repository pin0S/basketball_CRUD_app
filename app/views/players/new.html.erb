<h1>Add New Player</h1>

<%= form_with scope: :player, url: players_path, local: true do |form| %>
    <%= form.label :name %><br>
    <%= form.text_field :name%><br><br>
    <%= form.label :school %><br>
    <%= form.text_field :school %><br><br>
    <%= form.label :height_cm %><br>
    <%= form.number_field :height %><br><br>
    <%= form.label :weight_lbs %><br>
    <%= form.number_field :weight %><br><br>
    <%= form.label :years_active %><br>
    <%= form.number_field :years_active %><br><br>
    <%= form.label :salary %><br>
    <%= form.text_field :salary %><br><br>
    <%= form.label :free_agent %><br>
    <%= form.label :free_agent, 'Yes', :value => true %>
    <%= form.radio_button :free_agent, true%>
    <%= form.label :free_agent, 'No', :value=> false, :checked => true %>
    <%= form.radio_button :free_agent, false  %><br><br>
    <%= form.label :position %><br>
    <%= form.text_field :position %><br><br>
    <%= form.label :team %><br>
    <%= form.text_field :team %><br><br>
    

    <%= form.submit %>
<% end %>